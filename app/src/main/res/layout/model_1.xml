<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="affichagebouton" type="com.example.testappandoid.model.Donner"/>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="150dp"
            android:layout_height="150dp">

        <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/imageButton"
                loadImageUrl="@{affichagebouton.image}"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView
                android:text="@{affichagebouton.text}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:textStyle="bold" android:textAllCaps="true"
                android:fontFamily="sans-serif" android:textColor="#FF0000"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>