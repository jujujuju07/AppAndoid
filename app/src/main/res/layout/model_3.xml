<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="affichagebouton1" type="com.example.testappandoid.model.Donner"/>
        <variable name="affichagebouton2" type="com.example.testappandoid.model.Donner"/>
        <variable name="affichagebouton3" type="com.example.testappandoid.model.Donner"/>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="450dp">

        <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton1"
                loadImageUrl="@{affichagebouton1.image}"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
                tools:src="@tools:sample/avatars"/>
        <TextView
                android:text="@{affichagebouton1.text}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView1"
                app:layout_constraintEnd_toEndOf="@+id/imageButton1"
                app:layout_constraintStart_toStartOf="@+id/imageButton1"
                app:layout_constraintTop_toTopOf="@+id/imageButton1"
                app:layout_constraintBottom_toBottomOf="@+id/imageButton1"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:fontFamily="sans-serif" android:textColor="#FF0000"
        />
        <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton2"
                loadImageUrl="@{affichagebouton2.image}"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                tools:src="@tools:sample/avatars"/>
        <TextView
                android:text="@{affichagebouton2.text}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                app:layout_constraintEnd_toEndOf="@+id/imageButton2"
                app:layout_constraintStart_toStartOf="@+id/imageButton2"
                app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:fontFamily="sans-serif" android:textColor="#FF0000"
                app:layout_constraintVertical_bias="0.503" app:layout_constraintTop_toTopOf="@+id/imageButton2"/>
        <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageButton3"
                loadImageUrl="@{affichagebouton3.image}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                tools:src="@tools:sample/avatars" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"/>
        <TextView
                android:text="@{affichagebouton3.text}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3"
                app:layout_constraintEnd_toEndOf="@+id/imageButton3"
                app:layout_constraintStart_toStartOf="@+id/imageButton3"
                app:layout_constraintBottom_toBottomOf="@+id/imageButton3"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:fontFamily="sans-serif" android:textColor="#FF0000"
                app:layout_constraintVertical_bias="0.503" app:layout_constraintTop_toTopOf="@+id/imageButton3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>